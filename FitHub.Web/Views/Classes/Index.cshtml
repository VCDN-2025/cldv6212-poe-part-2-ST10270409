@model List<FitHub.Web.Models.ClassEntity>
@{
    ViewData["Title"] = "Classes";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-collection me-2"></i>Classes</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Seed" title="Insert 5 demo classes">Seed 5</a>
        <a class="btn btn-primary" asp-action="Create">Add Class</a>
    </div>
</div>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["ok"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="text-muted">No classes yet. Click <b>Add Class</b> or <b>Seed 5</b>.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var c in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(c.ImageUrl))
                    {
                        <img class="card-img-top" src="@c.ImageUrl" alt="@c.Title" style="object-fit:cover;height:200px" />
                    }
                    <div class="card-body">
                        <h5 class="card-title mb-1">@c.Title</h5>
                        <div class="small text-muted mb-2">@c.TrainerName</div>
                        <p class="card-text">@c.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">R @c.Price.ToString("0.00")</span>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this class?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rowKey" value="@c.RowKey" />
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
