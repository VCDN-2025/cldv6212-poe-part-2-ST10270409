@model List<FitHub.Web.Models.MemberEntity>
@{
    ViewData["Title"] = "Members";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-people me-2"></i>Members</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Seed" title="Insert 5 demo records">Seed 5</a>
        <a class="btn btn-primary" asp-action="Create">Add Member</a>
    </div>
</div>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["ok"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="text-muted">No members yet. Click <b>Add Member</b> or <b>Seed 5</b>.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Joined</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.FirstName @m.LastName</td>
                        <td>@m.Email</td>
                        <td>@m.Phone</td>
                        <td>@m.JoinDate.ToShortDateString()</td>
                        <td class="text-end">
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this member?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rowKey" value="@m.RowKey" />
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
