@{
    ViewData["Title"] = "Booking Created";
}
<div class="alert alert-success">
    <h5 class="mb-1"><i class="bi bi-check-circle-fill me-2"></i>Booking created!</h5>
    <div>Your booking reference is: <b>@ViewBag.Id</b></div>
    <div class="small text-muted">An event message was sent to queue <code>booking-events</code>.</div>
</div>
<p class="mt-3">
    <a class="btn btn-primary" asp-controller="Bookings" asp-action="Create">Create another</a>
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Home</a>
</p>
